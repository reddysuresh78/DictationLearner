<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    >


    <TextView
        android:id="@+id/tvCorrectWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/text_size_small"
        tools:text="12"
        android:textColor="@android:color/primary_text_light"

        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignBaseline="@+id/tvLabelAttemptedWordCount"
        android:layout_alignBottom="@+id/tvLabelAttemptedWordCount"
        android:layout_toLeftOf="@+id/ivCorrectWordCount"
        android:layout_toStartOf="@+id/ivCorrectWordCount" />

    <ImageView
        android:id="@+id/ivWrongWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_white_24dp"
        android:tint="@android:color/holo_red_dark"
        android:textColor="@android:color/primary_text_light"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignBottom="@+id/tvLabelAttemptedWordCount"
        android:layout_alignTop="@+id/tvCorrectWordCount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvWrongWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/primary_text_light"
        android:text=""
        android:textSize="@dimen/text_size_small"
        tools:text="12"
        android:layout_alignTop="@+id/ivWrongWordCount"
        android:layout_toLeftOf="@+id/ivWrongWordCount"
        android:layout_toStartOf="@+id/ivWrongWordCount" />

    <ImageView
        android:id="@+id/ivCorrectWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_white_24dp"
        android:tint="@android:color/holo_green_dark"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBottom="@+id/tvCorrectWordCount"
        android:layout_toLeftOf="@+id/tvWrongWordCount"
        android:layout_toStartOf="@+id/tvWrongWordCount" />

    <TextView
        android:id="@+id/tvLabelAttemptedWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_attempted_words"
        android:textSize="8sp"
        tools:text="attempted"
        android:layout_marginLeft="2dp"

        android:layout_alignBaseline="@+id/tvAttemptedWordCount"
        android:layout_alignBottom="@+id/tvAttemptedWordCount"
        android:layout_toLeftOf="@+id/tvCorrectWordCount"
        android:layout_toStartOf="@+id/tvCorrectWordCount" />

    <TextView
        android:id="@+id/tvAttemptedWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/text_size_small"
        tools:text="12"

        android:textColor="@android:color/primary_text_light"
        android:layout_alignBaseline="@+id/tvTotalWordCount"
        android:layout_alignBottom="@+id/tvTotalWordCount"
        android:layout_toLeftOf="@+id/tvLabelAttemptedWordCount"
        android:layout_toStartOf="@+id/tvLabelAttemptedWordCount" />

    <TextView
        android:id="@+id/tvLabelTestDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="8sp"
        tools:text="Test Date"

        android:layout_alignBaseline="@+id/tvTestDate"
        android:layout_alignBottom="@+id/tvTestDate"
        android:layout_toLeftOf="@+id/tvTotalWordCount"
        android:layout_toStartOf="@+id/tvTotalWordCount" />

    <TextView
        android:id="@+id/tvLabelWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_total_words"
        android:textSize="8sp"
        tools:text="total"
        android:layout_marginLeft="2dp"


        android:layout_alignBaseline="@+id/tvTotalWordCount"
        android:layout_alignBottom="@+id/tvTotalWordCount"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvTestDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""

        android:textSize="@dimen/text_size_medium"

        android:textColor="@android:color/primary_text_light"

        tools:text="12-Oct-16"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/tvTotalWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/text_size_small"
        tools:text="12"
        android:textColor="@android:color/primary_text_light"

        android:layout_alignBaseline="@+id/tvLabelTestDate"
        android:layout_alignBottom="@+id/tvLabelTestDate"
        android:layout_toLeftOf="@+id/tvLabelWordCount"
        android:layout_toStartOf="@+id/tvLabelWordCount" />


</RelativeLayout>